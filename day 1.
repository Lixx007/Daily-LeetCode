<h1 align="center">ðŸš€ LeetCode 34 - Find First and Last Position of Element in Sorted Array</h1>

## ðŸ’» Code Implementation (C++)

```cpp
class Solution {
public:
    int findrightmost(vector<int>& nums, int target){
        int l = 0, r = nums.size() - 1, right_most = -1;
        while(l <= r){
            int mid = l + (r - l)/2;
            if(nums[mid] == target){
                right_most = mid;
                l = mid + 1;
            } else if(nums[mid] < target){
                l = mid + 1;
            } else {
                r = mid - 1;
            }
        }
        return right_most;
    }

    int findleftmost(vector<int>& nums, int target){
        int l = 0, r = nums.size() - 1, left_most = -1;
        while(l <= r){
            int mid = l + (r - l)/2;
            if(nums[mid] == target){
                left_most = mid;
                r = mid - 1;
            } else if(nums[mid] < target){
                l = mid + 1;
            } else {
                r = mid - 1;
            }
        }
        return left_most;
    }

    vector<int> searchRange(vector<int>& nums, int target) {
        int left_most  = findleftmost(nums, target);
        int right_most = findrightmost(nums, target);
        return {left_most, right_most};
    }
};
