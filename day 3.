216. Combination Sum III
  
-Code Implementation.

-----------------------------------------------------------------------

class Solution {
public:
    void solve(int idx, int sum, int n, vector<vector<int>>& result, vector<int>& temp, int k) {
        if(sum == n && k == 0){
            result.push_back(temp);
            return;
        }
        if(sum > n){
            return;
        }
        for(int i = idx; i <= 9; i++){
            temp.push_back(i);
            solve(i+1,sum + i,n, result, temp,k-1);
            temp.pop_back();
        }
    }
    vector<vector<int>> combinationSum3(int k, int n) {
        vector<int> temp;
        vector<vector<int>> result;
        solve(1,0,n,result, temp, k);
        return result;
    }
};
