1456. Maximum Number of Vowels in a Substring of Given Length

-Code Implementation.

-----------------------------------------------------------------------

class Solution {
public:
    int maxVowels(string s, int k) {
        int n = s.length();
        int i = 0, j = 0;
        int maxV = 0;
        int count = 0;
        auto isvowel = [&](char ch){
            return ch == 'a' || ch == 'e' || ch == 'i' || ch == 'o' || ch == 'u' ;
        };
        while(j < n){
            if(isvowel(s[j]))
            count++;
            if(j - i + 1 == k){
                maxV = max(maxV, count);
                if(isvowel(s[i]))
                count--;
                i++;
            }
            j++;
        }
        return maxV;
    }
};
